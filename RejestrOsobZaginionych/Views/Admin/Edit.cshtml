@model RejestrOsobZaginionych.Models.Uzytkownik

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
	<link rel="stylesheet" href="/Content/bootstrap.min.css">

	<script src="/Scripts/jquery-3.4.1.min.js"></script>
	<script src="/Script/bootstrap.js"></script>
</head>
<body class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Uzytkownik</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Haslo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Haslo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Haslo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-check col-md-offset-2">
            <input class="form-check-input" type="radio" name="HasloZmienione" id="haslo1" value="0" checked>
            <label class="form-check-label" for="haslo1">
                Hasło bez zmian
            </label>
        </div>
        <div class="form-check col-md-offset-2">
            <input class="form-check-input" type="radio" name="HasloZmienione" id="haslo2" value="1">
            <label class="form-check-label" for="haslo2">
                Zaktualizuj hasło
            </label>
        </div>

        <div class="form-check col-md-offset-2">

		@Html.EditorFor(model => model.Aktywny, new { htmlAttributes = new { @class = "form-check-input" } })
        @Html.ValidationMessageFor(model => model.Aktywny, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.Aktywny, htmlAttributes: new { @class = "form-check-label " })
           
        </div>

        <div class="form-check col-md-offset-2">

		@Html.EditorFor(model => model.Admin, new { htmlAttributes = new { @class = "form-check-input" } })
        @Html.ValidationMessageFor(model => model.Admin, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.Admin, htmlAttributes: new { @class = "form-check-label " })
           
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
        @Html.ActionLink("Wróć", "Index")
    </div>
</body>
</html>
